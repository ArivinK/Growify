      <link rel="stylesheet" type="text/css" href="../../css/style.css"/>

            
</head>
<body>        
      <header>
            <img id="logo" src="../../images/grow.jpg" width="150x150">
      </header>

      <div class="folderTab clearFix">
            <div class="breadCrumbs">
                  <a href="/">Home</a>
                  <a href="/">Producer</a>
                  <a href="/products">Products</a>
            </div>
      </div>

				
<div class="productStage">

      <div class="botBorder clearFix">
            <div class="productImage">
                  <img src="../../images/374380-svetik.jpg" width="300x300">
                  <ul class="imageList">
                        <li><a href="#"><img src="../../images/374380-svetik.jpg" width="150x150"></a></li>
                        <li><a href="#"><img src="../../images/374380-svetik.jpg" width="150x150"></a></li>
                  </ul>
            </div>
            <div class="overview">
                  <h2>Thank you for your purchase!</h2>
                  <h3>Your order has been confirmed</h3>

                  <h3>Price: â‚¬ <%= products.price %></h3>
                  <h3>Quantity: <%= products.quantity %></h3>
                  <h3>Producer: <%= products.seller_id %></h3>
                  <h3>Location: <%= products.location %></h3>
                  <span class="description">
                        We will notify you when your basket is dispatched
                  </span>

                  <form action='/buy/confirmation/<%= products._id %>' method="POST" >

                        <button class ="btn btn-warning">Back</button>

                  </form>
            </div>     
      </div>
</div>

      <!-- make sure that script tag can be used inside ejs template -->
      <script>
            // Get the modal
            var modal = document.getElementById('myModal');
            var imgs = document.getElementsByClassName('img');
            // Get the image and insert it inside the modal - use its "alt" text as a caption

            for(indx in [].slice.call(imgs)){
                  var modalImg = document.getElementById("img01");
                  var captionText = document.getElementById("caption");
                  imgs[indx].onclick = function () {
                        modal.style.display = "block";
                        modalImg.src = this.src;
                        captionText.innerHTML = this.alt;
                  }

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                  modal.style.display = "none";
            }

      </script>
</body>
</html>